<% if @post %>
  <article>
    <h1><%= @post.title %></h1>
    <p><%= @post.author %></p>
    <p><%= @post.date %></p>
    <div>
      <%= @post.body %>
    </div>
    <a href="/posts/<%= @post.id %>/edit">Edit</a>
    <form action="/posts/<%= @post.id %>" method="post">
      Delete: <input type="submit">
    </form>
  </article>
<% end %>

